<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="81dp"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvReport"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="Get Borrow Reports Categorywise "
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#ffaf5f"
            android:background="@drawable/border"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Get Reports between two dates "
            android:textSize="20sp"
            android:textColor="#3c1053"
            android:textStyle="bold"
            android:background="@drawable/border"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="3dp"
            android:layout_margin="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:id="@+id/bwTwoDates">

            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@drawable/border">
                <TextView
                    android:id="@+id/tvBorrowReportDateFrom"
                    android:layout_width="180dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="DD/MM/YYYY"
                    android:inputType="date"
                    android:padding="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/colorTexts"/>
                <TextView
                    android:layout_width="85dp"
                    android:layout_height="45dp"
                    android:text="Date"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/colorTexts"
                    android:id="@+id/tvHintBorrowReportDateFrom"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@drawable/border">
                <TextView
                    android:id="@+id/tvBorrowReportDateTo"
                    android:layout_width="180dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="DD/MM/YYYY"
                    android:inputType="date"
                    android:padding="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/colorTexts"/>
                <TextView
                    android:layout_width="85dp"
                    android:layout_height="45dp"
                    android:text="Date"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/colorTexts"
                    android:id="@+id/tvHintBorrowReportDateTo"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnBorrowReportbwTwoDates"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:padding="5dp"
                android:text="Get Report"
                android:textColor="@color/colorTexts" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Get records Lender name wise"
            android:textSize="20sp"
            android:textColor="#3c1053"
            android:textStyle="bold"
            android:background="@drawable/border"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="3dp"
            android:layout_margin="10dp"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_value"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColorHint="@color/colorTexts">

            <EditText
                android:id="@+id/etBorrowLender"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Lender name "
                android:textSize="18sp"
                android:textColor="#00ff00"
                android:layout_gravity="center"
                android:gravity="center"
                android:inputType="text"/>

        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/btnBorrowReportLender"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:padding="5dp"
            android:text="Get Report"
            android:textColor="@color/colorTexts" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Between two years and months "
            android:textSize="20sp"
            android:textColor="#3c1053"
            android:textStyle="bold"
            android:background="@drawable/border"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="3dp"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/bwTwoMonthsAndDay">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_month1"
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:textColorHint="@color/colorTexts">

                <EditText
                    android:id="@+id/etFromMonth"
                    android:layout_width="210dp"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:hint="From Year(YYYY)"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:inputType="number"/>

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_month2"
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:textColorHint="@color/colorTexts">

                <EditText
                    android:id="@+id/etToMonth"
                    android:layout_width="210dp"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:hint="To Year(YYYY)"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:inputType="number"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_day1"
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:textColorHint="@color/colorTexts">

                <EditText
                    android:id="@+id/etFromDay"
                    android:layout_width="210dp"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:hint="From Month(1-12)"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:inputType="number"/>

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_day2"
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:textColorHint="@color/colorTexts">

                <EditText
                    android:id="@+id/etToDay"
                    android:layout_width="210dp"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:hint="To Month(1-12)"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:inputType="number" />

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

            <Button
                android:id="@+id/btnBorrowReportbwMonthsAndDay"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:padding="5dp"
                android:text="Get Report"
                android:textColor="@color/colorTexts" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Get BarGraph for Income "
                android:textSize="20sp"
                android:textColor="#3c1053"
                android:textStyle="bold"
                android:background="@drawable/border"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="3dp"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/btnBorrowBarchart"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:padding="5dp"
                android:text="Get Graph"
                android:textColor="@color/colorTexts"
                />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>