<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="81dp"
    android:background="@drawable/gradient_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvReport"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="Get Income Reports Categorywise "
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#ffaf5f"
            android:background="@drawable/border"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Get Reports between two dates "
            android:textSize="20sp"
            android:textColor="#3c1053"
            android:textStyle="bold"
            android:background="@drawable/border"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="3dp"
            android:layout_margin="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:id="@+id/bwTwoDates">

            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@drawable/border">
                <TextView
                    android:id="@+id/tvIncomeReportDateFrom"
                    android:layout_width="180dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="DD/MM/YYYY"
                    android:inputType="date"
                    android:padding="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/colorTexts"/>
                <TextView
                    android:layout_width="85dp"
                    android:layout_height="45dp"
                    android:text="Date"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/colorTexts"
                    android:id="@+id/tvHintIncomeReportDateFrom"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@drawable/border">
                <TextView
                    android:id="@+id/tvIncomeReportDateTo"
                    android:layout_width="180dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="DD/MM/YYYY"
                    android:inputType="date"
                    android:padding="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/colorTexts"/>
                <TextView
                    android:layout_width="85dp"
                    android:layout_height="45dp"
                    android:text="Date"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/colorTexts"
                    android:id="@+id/tvHintIncomeReportDateTo"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnIncomeReportbwTwoDates"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:padding="5dp"
                android:text="Get Report"
                android:textColor="@color/colorTexts" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Get records Categorywise"
            android:textSize="20sp"
            android:textColor="#3c1053"
            android:textStyle="bold"
            android:background="@drawable/border"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="3dp"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/tvIncomeReportInput"
                android:layout_width="185dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:ems="10"
                android:gravity="center"
                android:text="Regular Salary"
                android:inputType="textPersonName"
                android:padding="3dp"
                android:textSize="17sp"
                android:textColor="@color/colorTexts"

                />

            <TextView
                android:id="@+id/tvIncomeReportType"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Category"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textSize="18sp"
                android:textColor="@color/colorTexts"
                />


        </LinearLayout>

        <Button
            android:id="@+id/btnIncomeReportCategorywise"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:padding="5dp"
            android:text="Get Report"
            android:textColor="@color/colorTexts" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Between two years and months "
            android:textSize="20sp"
            android:textColor="#3c1053"
            android:textStyle="bold"
            android:background="@drawable/border"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="3dp"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/bwTwoMonthsAndDay">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_month1"
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:textColorHint="@color/colorTexts">

                <EditText
                    android:id="@+id/etFromMonth"
                    android:layout_width="210dp"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:hint="From Year(YYYY)"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:inputType="number"/>

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_month2"
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:textColorHint="@color/colorTexts">

                <EditText
                    android:id="@+id/etToMonth"
                    android:layout_width="210dp"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:hint="To Year(YYYY)"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:inputType="number"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_day1"
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:textColorHint="@color/colorTexts">

                <EditText
                    android:id="@+id/etFromDay"
                    android:layout_width="210dp"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:hint="From Month(1-12)"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:inputType="number"/>

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_day2"
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:textColorHint="@color/colorTexts">

                <EditText
                    android:id="@+id/etToDay"
                    android:layout_width="210dp"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:hint="To Month(1-12)"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:inputType="number" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btnIncomeReportbwMonthsAndDay"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:padding="5dp"
                android:text="Get Report"
                android:textColor="@color/colorTexts" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Get Reports between two months"
                android:textSize="18sp"
                android:textColor="#3c1053"
                android:textStyle="bold"
                android:background="@drawable/border"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="3dp"
                android:layout_margin="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/bwTwoMonths"
                android:layout_gravity="center"
                android:gravity="center">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_frommonth"
                    android:layout_width="295dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textColorHint="@color/colorTexts">

                    <EditText
                        android:id="@+id/etIncomeReportFromMonth"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:hint="From month(1-12)"
                        android:textSize="20sp"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:inputType="number"/>

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_tomonth"
                    android:layout_width="295dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textColorHint="@color/colorTexts">

                    <EditText
                        android:id="@+id/etIncomeReportToMonth"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:hint="To month(1-12)"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:inputType="number"/>

                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/btnViewIncomeReportbwMonths"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/button_background"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Get Report"
                    android:textColor="@color/colorTexts"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Get BarGraph for Income "
                android:textSize="20sp"
                android:textColor="#3c1053"
                android:textStyle="bold"
                android:background="@drawable/border"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="3dp"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/btnIncomeBarchart"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:padding="5dp"
                android:text="Get Graph"
                android:textColor="@color/colorTexts"
                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>

    </ScrollView>

</FrameLayout>